{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SpecificTable",
      "Effect": "Allow",
      "Action": [
        "dynamodb:BatchGet*",
        "dynamodb:Get*",
        "dynamodb:Query",
        "dynamodb:Scan",
        "dynamodb:BatchWrite*",
        "dynamodb:Delete*",
        "dynamodb:Update*",
        "dynamodb:PutItem"
      ],
      "Resource": [
        "arn:aws:dynamodb:*:*:table/user",
        "arn:aws:dynamodb:*:*:table/schedule",
        "arn:aws:dynamodb:*:*:table/execution",
        "arn:aws:dynamodb:*:*:table/test",
        "arn:aws:dynamodb:*:*:table/schedule/index/*",
        "arn:aws:dynamodb:*:*:table/execution/index/*",
        "arn:aws:dynamodb:*:*:table/test/index/*"
      ]
    }
  ]
}